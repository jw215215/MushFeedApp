{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30,
        "memory": 3008,
        "includeFiles": ["api/_build.sh", "libs/**"],
        "buildCommand": "chmod +x api/_build.sh && ./api/_build.sh"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "CHROMIUM_PATH=$(which chromium) npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/shop-look",
      "dest": "/api/shop-look.js",
      "headers": {
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
    "CHROMIUM_PATH": "/usr/bin/chromium"
  }
}
