{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30,
        "memory": 3008,
        "includeFiles": ["api/_build.sh"],
        "buildCommand": "chmod +x api/_build.sh && ./api/_build.sh"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/shop-look",
      "dest": "/api/shop-look.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "build": {
    "env": {
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
    }
  },
  "functions": {
    "api/shop-look.js": {
      "memory": 3008,
      "maxDuration": 30
    }
  }
}